{
  "name": "btc-investment/native-php-mvc",
  "description": "Native PHP 8.5 MVC HYIP Platform",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "BTC Investment Team",
      "email": "admin@btc-investment.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-session": "*",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-redis": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\": "database/"
    },
    "files": [
      "app/Core/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-update-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "phpunit",
    "serve": "@php -S localhost:8000 -t public"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}